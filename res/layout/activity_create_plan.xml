<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/background_color_gray" android:clickable="false">

  <ScrollView
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:fillViewport="true" android:layout_alignParentTop="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"

            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:layout_margin="5dp" android:padding="5dp">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/with_who_label"/>
            <include layout="@layout/horizontal_line_gray"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friends_name_to_invite"/>
        </LinearLayout>

        <EditText
                android:id="@+id/what_to_do"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/background_white"
                android:layout_margin="5dp" android:padding="5dp" android:hint="@string/what_to_do_default"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white" android:layout_margin="5dp" android:padding="5dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/days_after_spinner"
                        android:entries="@array/positive_num_list"
                        android:layout_weight="5"
                        android:clickable="false"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="〜"/>

                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_words_spinner"
                        android:layout_weight="5"
                        android:entries="@array/time_words"/>
            </LinearLayout>
            <include layout="@layout/horizontal_line_gray"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="46dp" android:orientation="horizontal" android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/duration_spinner"
                        android:layout_marginLeft="10dp"
                        android:entries="@array/duration"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                            android:text="来週中" android:id="@+id/button4"
                            android:layout_alignParentBottom="true" android:background="@color/background"
                            android:textColor="@color/font_color_white" android:textSize="12dp"
                            android:layout_weight="0.33"/>
                    <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                            android:text="なるべく早く" android:id="@+id/button5"
                            android:layout_alignParentBottom="true" android:background="@color/background_color_gray"
                            android:textColor="@color/font_color_gray" android:textSize="12dp"
                            android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_weight="0.34"/>
                    <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                            android:text="手動設定" android:id="@+id/button6"
                            android:layout_alignParentBottom="true" android:background="@color/background_color_gray"
                            android:textColor="@color/font_color_gray" android:layout_weight="0.33"
                            android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="46dp"
                    android:paddingTop="5dp" android:paddingBottom="5dp" android:gravity="fill_horizontal">
                <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                        android:text="朝" android:id="@+id/button7"
                        android:layout_alignParentBottom="true" android:background="@color/background"
                        android:textColor="@color/font_color_white" android:textSize="12dp"
                        android:layout_weight="0.25"/>
                <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                        android:text="昼" android:id="@+id/button8"
                        android:layout_alignParentBottom="true" android:background="@color/background_color_gray"
                        android:textColor="@color/font_color_gray" android:textSize="12dp"
                        android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_weight="0.25"/>
                <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                        android:text="夕" android:id="@+id/button9"
                        android:layout_alignParentBottom="true" android:background="@color/background_color_gray"
                        android:textColor="@color/font_color_gray" android:textSize="12dp"
                        android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_weight="0.25"/>
                <Button android:layout_width="wrap_content" android:layout_height="fill_parent"
                        android:text="夜" android:id="@+id/button10"
                        android:layout_alignParentBottom="true" android:background="@color/background_color_gray"
                        android:textColor="@color/font_color_gray"
                        android:textSize="12dp" android:layout_weight="0.25"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="下の日程で招待を送ります(スワイプで日程変更)"
                        />
                <include layout="@layout/horizontal_line_gray"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:id="@+id/schedules" android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
  </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_button_label"
        android:id="@+id/invite_button"
        android:layout_alignParentBottom="true" android:background="@drawable/color_stateful"
        android:textColor="@color/font_color_white"/>
</RelativeLayout>