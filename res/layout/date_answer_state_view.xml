<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:paddingLeft="5dp" android:paddingRight="5dp">
    <include layout="@layout/horizontal_line_gray"
             android:layout_width="fill_parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp" android:layout_marginBottom="0dp"
                android:layout_gravity="center" android:background="@color/background">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/num_of_ok"
                android:background="@color/background"
                android:gravity="center_horizontal" android:layout_gravity="center"
                android:textColor="@color/font_color_white" android:textSize="28sp" />
            </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2010/01/01 1:00 - 2:00"
                    android:id="@+id/event_title"
                    android:singleLine="true"
                    android:textSize="24sp"
                    android:paddingTop="5dp"
                    android:focusableInTouchMode="false"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text Text Text Text Text Text Text Text Text"
                        android:padding="5dp"
                        android:textColor="@color/font_color_gray"
                        android:id="@+id/positive_friend_names"/>
            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>