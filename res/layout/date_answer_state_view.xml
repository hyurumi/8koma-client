<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="2010/01/01 1:00 - 2:00"
      android:id="@+id/event_title"
      android:singleLine="true"
      android:textSize="20sp"
      android:paddingTop="5dp"/>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="5dp"
        android:id="@+id/num_of_ok"
        android:background="@color/ok_green"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="5dp"
        android:id="@+id/num_of_neutral"
        android:background="@color/neutral_yellow"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="5dp"
        android:id="@+id/num_of_ng"
        android:background="@color/ng_red"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Text Text Text Text Text Text Text Text Text Text Text Text"
          android:padding="5dp"
          android:textColor="@color/ok_green"
          android:id="@+id/positive_friend_names"/>
    </HorizontalScrollView>
  </LinearLayout>
  <include layout="@layout/horizontal_line_gray"
      android:layout_margin="3dp"/>
</LinearLayout>