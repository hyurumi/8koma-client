<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:id="@+id/date_candidate_answer_no"
      android:background="@color/ng_red"
      android:padding="10dp"
      android:textSize="20dp"
      android:layout_alignParentLeft="true"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="3"
      android:id="@+id/date_candidate_answer_yes"
      android:background="@color/ok_green"
      android:padding="10dp"
      android:textSize="20dp"
      android:layout_alignParentRight="true"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="10/2 18:00 - 19:00"
      android:id="@+id/candidate_date_body"
      android:background="@color/neutral_yellow"
      android:layout_toLeftOf="@id/date_candidate_answer_yes"
      android:layout_toRightOf="@id/date_candidate_answer_no"
      android:layout_alignWithParentIfMissing="false"
      android:padding="10dp"
      android:textSize="20dp"
      android:gravity="center_horizontal"/>
</RelativeLayout>