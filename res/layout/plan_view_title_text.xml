<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
  <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/event_title"
            android:layout_toLeftOf="@+id/expand_button"
            android:singleLine="true"
            android:textSize="24sp"
            android:paddingTop="5dp" android:layout_weight="1"/>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:id="@+id/remind"
      android:layout_gravity="center|right"
      android:background="@color/background"
      android:padding="5dp" android:visibility="gone">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/icon_remind"
        android:id="@+id/icon_remind"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/font_color_white"
        android:textSize="12sp" android:paddingRight="5dp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/remind"

        android:background="@color/background"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/font_color_white"
        android:textSize="12sp"/>
  </LinearLayout>
</LinearLayout>