<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:scaleType = "centerCrop"
android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" android:paddingTop="100dp">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="vertical" android:layout_marginTop="100dp">
    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/logo_white"
        android:layout_gravity="center"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.5"
        android:shadowColor="@color/font_shadow_black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="48dp"
        android:textColor="@color/font_color_white"
        android:shadowColor="@color/font_shadow_black"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.5"
        android:layout_gravity="center_vertical"/>
  </LinearLayout>
  <include layout="@layout/horizontal_line_gray"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/setup_intro_message"
      android:paddingTop="10dp"
      android:textSize="23dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:shadowDx="1.5"
      android:shadowDy="1.5"
      android:shadowRadius="1.5"
      android:textColor="@color/font_color_white"
      android:shadowColor="@color/font_shadow_black"/>

</LinearLayout>
</RelativeLayout>