<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/setup_calendar_text"
      android:padding="5dp"
      android:background="#e3e3e3"
      android:id="@+id/setup_calendar_text"/>
  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:id="@+id/setup_calendar_list_container">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_calendar_confirm"
        android:id="@+id/setup_calendar_complete_button"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_color_stateful"
        android:textColor="@color/font_color_white"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/setup_calendar_complete_button"
        android:id="@+id/setup_calendar_list"/>
  </RelativeLayout>
</LinearLayout>