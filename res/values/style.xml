<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="hachiko_theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/hachiko_actionbar_style</item>
        <item name="android:actionOverflowButtonStyle">@style/hachiko_actionbar_overflow</item>
        <item name="android:actionButtonStyle">@style/hachiko_actionbar_button</item>
        <item name="android:textColor">@color/font_color_normal</item>
        <item name="android:actionMenuTextColor">@color/font_color_white</item>
    </style>
    <style name="hachiko_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/background</item>
        <item name="android:titleTextStyle">@style/hachiko_actionbar_titletextstyle</item>
    </style>
    <style name="hachiko_actionbar_titletextstyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/font_color_white</item>
    </style>
    <style name="hachiko_actionbar_button" parent="@android:Widget.ActionButton">
        <item name="android:background">@drawable/btn_color_stateful</item>
    </style>
    <style name="hachiko_actionbar_overflow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_action_overflow</item>
        <item name="android:background">@drawable/btn_color_stateful</item>
    </style>
</resources>