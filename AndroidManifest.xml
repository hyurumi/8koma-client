<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.appspot.hachiko_schedule"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
    <uses-permission android:name="android.permission.READ_CALENDAR"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher"
        android:name="com.appspot.hachiko_schedule.HachikoApp">
        <activity android:name="MainActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".setup.SetupCalendarActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name=".setup.LoginActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name=".plans.CreatePlanActivity"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name=".friends.NewEventChooseGuestActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity android:name=".friends.NewEventChooseFbFriendActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity android:name=".plans.ConfirmNewEventActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name=".prefs.MainPreferenceActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity android:name=".dev.NotImplementedActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <!-- For facebook sdk -->
        <activity android:name="com.facebook.LoginActivity"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name">
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
    </application>
</manifest>
